}
.order-item .i-top {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    height: 80rpx;
    padding-right: 30rpx;
    font-size: 28rpx;
    color: #303133;
    position: relative;
}
.order-item .i-top .time {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
}
.order-item .i-top .state {
      color: #fa436a;
}
